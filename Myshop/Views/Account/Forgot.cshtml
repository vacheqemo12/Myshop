@model Myshop.Models.Forgot

@{
    ViewBag.Title = "Forgot";
}

<form action="/Account/Forgot" method="post">
    <div class="form-group"></div>

    <div>
        <input type="text" class="form-control" name="Email" placeholder="ელ. ფოსტა">
    </div>
    <br>
    
    
    <div class="form-group">
        <button type="submit" class="btn btn-default">პაროლის აღდგენა</button>
    </div>
    <br>
    @if(ViewBag.error == null)
    {
       <span style="color:red;"> @ViewBag.success</span> 
    }
    else
    {
        <span style="color:green;">@ViewBag.error</span>
    }
</form>