@model Myshop.Controllers.Login

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<span style="color:azure">@Session["text"]</span>
<form action="/Account/Login" method="post">
    <div class="form-group"></div>

    <div>
        <input type="text" class="form-control" name="Email" placeholder="ელ. ფოსტა">
    </div>
    <br>
    <div>
        <input type="password" class="form-control" name="Password" placeholder="პაროლი">

        <br>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Login</button>
    </div>
    <br>
    <div class="form-group" style="color:red;font-size:14px; ">
      @ViewBag.error
    </div>
    <div class="form-group" style="color:red;font-size:14px; ">
        <a href="/Account/Forgot"style="color:aqua;font-size:15px;">პაროლის აღდგენა</a>
    </div>
</form>